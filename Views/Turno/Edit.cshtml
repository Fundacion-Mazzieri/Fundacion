@model Fundacion.Models.Turno

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TuId" />
            <div class="form-group">
                <label asp-for="TuDescripcion" class="control-label">Descripcion de Turno</label>
                <input asp-for="TuDescripcion" class="form-control" />
                <span asp-validation-for="TuDescripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
