@model Fundacion.Models.Turno

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Deseas eliminar el turno @Html.DisplayFor(modelItem => Model.TuDescripcion)?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TuDescripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TuDescripcion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TuId" />
        <input type="submit" value="Eliminar" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-primary">Volver</a>
    </form>
</div>
