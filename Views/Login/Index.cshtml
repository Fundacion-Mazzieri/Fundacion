@model Fundacion.Models.Login
@{
    ViewData["Title"] = "Ingreso";
    Layout = null;
    


}
<img src="https://fundacionmazzieri.com.ar/wp-content/uploads/2019/04/fundacion-mazzieri-1.jpg" />

<form asp-action="Ingresar">
    <div class="titulo">
        <h1>Inicio de sesion</h1>

        <hr />

    </div>
    <div class="form-group form-group-text">
        <input type="text" placeholder="Ingrese su correo electronico" value="" asp-for="Correo" class="btn btn-primary input-text" />
    </div>
    <div class="form-group form-group-text">
        <input type="text" placeholder="Ingrese su clave" value="" asp-for="Clave" class="btn btn-primary input-text" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>
   
    <div class="form-group form-group-submit">
        <input type="submit" value="Ingresar" class="btn btn-primary submit" />
    </div>
</form>

<style>
    html{
        padding:0;
    }
    body{
        font-family: Mukta Mahee,sans-serif;
        margin:0;
        /*background-image: url("/assets/home/fundacion-mazzieri.png");
        backdrop-filter:brightness(0.3);
            */
        backdrop-filter: brightness(0.8);
    }
    img{
        width: 100px;
        margin-left: 25px;
        filter: invert(1);
        border-radius: 20px;
    }
    .titulo{
        margin: 50px;
        margin-bottom: 0;
    }
    h1{
        color: #0057af;
        font-weight: normal;
        font-style: normal;
        line-height: 1.4;
        font-size: 20px;
    }
    hr{
        width:50%;
        margin:0;
        background-color:#0040C1;
    }

    form {
        width: 50%;
        position: relative;
        background-color: #EFEFEF;
        height: 60%;
        margin: auto;
        border-radius: 5px;
        padding: 20px;
        border-radius: 5px 30px 30px;
       
        margin-top: 0;
        top: 5%;
    }

    .form-group{
        width:85%;
        margin: auto;
        margin-top: 40px;
    }
    .form-group-text:hover{
         
        border-bottom: 1.3px solid #0040C1;
        
    }
    .input-text:focus{
        border-bottom: 2px solid #0040C1;
        
    }
     
    input{

        width: 100%;
        margin: 0;
        border: none;
        outline: black;
        background: transparent;
        border-bottom: 1px solid;
        
    }
    .form-group-submit{
        position: absolute;
        bottom: 30px;
        border: 1.5px solid;
        width: 50%;
        padding:3px;
        left:25%;
        right:25%;
        background-color: black;
        border: 0.7px solid #F9FAC4;
        border-radius: 5px;
        
    }

    .submit{
        border: none;
        font-size: 18px;
        font-weight: bold;
        letter-spacing: 1.2px;
        font-stretch: ultra-expanded;
        color: #F9FAC4;
        cursor: pointer;
    }
    
</style>
