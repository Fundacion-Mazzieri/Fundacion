@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Asistencia>

<head>
    <link rel="stylesheet" href="~/css/btn-volver/styles.css" />
</head>

<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">Volver</button>

<div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Navegacion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <a asp-area="" asp-controller="Asistencias" asp-action="Index" class="visually-hidden">
            <div class="col col1"><h3>Asistencias</h3><img src="./assets/inicio/lista-de-verificacion.png" c /></div>
        </a>
        <a asp-area="" asp-controller="Turno" asp-action="Index">
            <div class="col"><h3>Turnos</h3><img src="./assets/inicio/turnos.png" width="64" /></div>
        </a>
        <a asp-area="" asp-controller="Categorias" asp-action="Index">
            <div class="col"> <h3>Categorias</h3> <img src="./assets/inicio/aplicacion.png" /></div>
        </a>
        <a asp-area="" asp-controller="Espacios" asp-action="Index">
            <div class="col"> <h3>Espacios</h3>  <img src="./assets/inicio/ruptura.png" /></div>
        </a>
        <a asp-area="" asp-controller="Roles" asp-action="Index">
            <div class="col"> <h3>Roles</h3> <img src="./assets/inicio/roles.png" /></div>
        </a>
        <a asp-area="" asp-controller="Aulas" asp-action="Index">
            <div class="col"><h3>Aulas</h3>  <img src="./assets/inicio/aula.png" /></div>
        </a>
        <a asp-area="" asp-controller="Usuarios" asp-action="Index">
            <div class="col"> <h3>Usuarios</h3>  <img src="./assets/inicio/grupo.png" /></div>
        </a>

    </div>
</div>

<br />
<h1>Asistencia</h1>
<h5>Reporte Mensual</h5>
<p>    
    <div class="col-2">        
        @using (Html.BeginForm("ExportToExcel", "Reporte", FormMethod.Post))
        {
            <div class="form-group row">                
                <select class="form-control form-control-sm m-1" id="mes" name="mes">
                    <option value="1">Enero</option>
                    <option value="2">Febrero</option>
                    <option value="3">Marzo</option>
                    <option value="4">Abril</option>
                    <option value="5">Mayo</option>
                    <option value="6">Junio</option>
                    <option value="7">Julio</option>
                    <option value="8">Agosto</option>
                    <option value="9">Septiembre</option>
                    <option value="10">Octubre</option>
                    <option value="11">Noviembre</option>
                    <option value="12">Diciembre</option>
                </select>
                <button class="btn btn-success btn-sm m-1" type="submit">Exportar Mes Excel</button>
            </div>
        }
    </div>
</p>
<br />
<h5>Reporte Completo</h5>
<table class="table">
    <thead>
        <tr>
            <th>Espacio</th>
            <th>Turno</th>
            <th>Usuario</th>
            <th>Categoría</th>
            <th>Ingreso</th>
            <th>Egreso</th>
            <th>Cantidad Horas</th>
            <th>Valor Hora</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Es.EsDescripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Es.Tu.TuDescripcion)</td>
                <td>
                    (@Html.DisplayFor(modelItem => item.Es.Us.UsDni))
                    @Html.DisplayFor(modelItem => item.Es.Us.UsApellido),
                    @Html.DisplayFor(modelItem => item.Es.Us.UsNombre)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Es.Ca.CaDescripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.AsIngreso)</td>
                <td>@Html.DisplayFor(modelItem => item.AsEgreso)</td>
                <td>@Html.DisplayFor(modelItem => item.AsCantHsRedondeo)</td>
                <td>@Html.DisplayFor(modelItem => item.Es.Ca.CaValorHora)</td>
                <td>@(item.Es.Ca.CaValorHora * item.AsCantHsRedondeo)</td>
            </tr>
        }
    </tbody>
</table>
<p>
    @using (Html.BeginForm("ExportToExcel", "Reporte", FormMethod.Post))
    {
        <input class="btn btn-success btn-sm m-1" type="submit" value="Exportar Todo Excel" />
    }
</p>