@model Fundacion.Models.Espacio

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalles de Espacios:</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.EsDescripcion)*@
            Descripcion:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsDescripcion)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.EsActivo)*@
            Activo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsActivo)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Ca)*@
            Categoria:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ca.CaDescripcion)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Tu)*@
            Turno:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tu.TuDescripcion)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.Us)*@
            Docente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Us.UsNombre) @Html.DisplayFor(model => model.Us.UsApellido)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EsId" class="btn btn-warning">Modificar</a> |
    <a asp-action="Index" class="btn btn-primary">Volver</a>
</div>
