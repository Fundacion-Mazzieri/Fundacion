@model Fundacion.Models.Role

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoDenominacion" class="control-label">Detalle</label>
                <input asp-for="RoDenominacion" class="form-control" />
                <span asp-validation-for="RoDenominacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" style="margin-top:20px" />
                <a asp-action="Index" class="btn btn-outline-danger" style="margin-top:20px">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
