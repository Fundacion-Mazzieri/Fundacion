@model IEnumerable<Fundacion.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoDenominacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoDenominacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.RoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.RoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
