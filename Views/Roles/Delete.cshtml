@model Fundacion.Models.Role

@{
    ViewData["Title"] = "Eliminar rol";
}

<h1>Eliminar</h1>

<h3>Estas seguro que deseas eliminar este Rol?</h3>
<div>
    <h4>Roles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoDenominacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoDenominacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoId" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> 
        <a asp-action="Index" class="btn btn-outline-primary">Volver</a>
    </form>
</div>
