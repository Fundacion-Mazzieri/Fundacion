@model Fundacion.Data.DTO.UsuarioDTO
@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<div class="text-center">

    <br />
    @if (Model.Autenticado == false)
    {
        <h1>
            <a class="nav-link text-black login animate__animated animate__pulse animate__slower animate__delay-3s animate__repeat-3" asp-area="" asp-controller="Login" asp-action="Index">Iniciar Sesion</a>
        </h1>

    }
    <br />
    <h2>Sistema de Asistencia</h2>
    
    <div class="img-container">
        <img src="/assets/home/fundacion-mazzieri.png">
    </div>
    
</div>
