@model Fundacion.Models.Asistencia

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<div>
    <h4>Desea eliminar la asistencia del espacio @Html.DisplayFor(model => model.Es.EsDescripcion)?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.AsIngreso)*@
            Ingreso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AsIngreso)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.AsEgreso)*@
            Egreso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AsEgreso)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.AsPresent)*@
            Presente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AsPresent)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Es)*@
            Espacio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Es.EsDescripcion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AsiId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
