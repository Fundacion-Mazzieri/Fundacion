@model IEnumerable<Fundacion.Models.Asistencia>

@{
    ViewData["Title"] = "Asistencia";
}
<head>
    <link rel="stylesheet" href="~/css/btn-volver/styles.css" />
</head>

<button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">Volver</button>

<div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Navegacion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">


        <a asp-area="" asp-controller="Asistencias" asp-action="Index" class="visually-hidden">
            <div class="col col1"><h3>Asistencias</h3><img src="./assets/inicio/lista-de-verificacion.png" c /></div>
        </a>
        <a class="visually-hidden" asp-area="" asp-controller="Turno" asp-action="Index">
            <div class="col"><h3>Turnos</h3><img src="./assets/inicio/turnos.png" width="64" /></div>
        </a>
        <a asp-area="" asp-controller="Categorias" asp-action="Index">
            <div class="col"> <h3>Categorias</h3> <img src="./assets/inicio/aplicacion.png" /></div>
        </a>
        <a asp-area="" asp-controller="Espacios" asp-action="Index">
            <div class="col"> <h3>Espacios</h3>  <img src="./assets/inicio/ruptura.png" /></div>
        </a>
        <a asp-area="" asp-controller="Roles" asp-action="Index">
            <div class="col"> <h3>Roles</h3> <img src="./assets/inicio/roles.png" /></div>
        </a>
        <a asp-area="" asp-controller="Aulas" asp-action="Index" >
            <div class="col"><h3>Aulas</h3>  <img src="./assets/inicio/aula.png" /></div>
        </a>
        <a asp-area="" asp-controller="Usuarios" asp-action="Index">
            <div class="col"> <h3>Usuarios</h3>  <img src="./assets/inicio/grupo.png" /></div>
        </a>
        <a asp-area="" asp-controller="Usuarios" asp-action="Index">
            <div class="col"> <h3>Usuarios</h3>  <img src="./assets/inicio/grupo.png" /></div>
        </a>
    </div>
</div>

<h1>Asistencia</h1>

<p>
    <a class="btn btn-secondary btn-sm" asp-action="Create">Crear Nueva Asistencia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.AsIngreso)*@
                Ingreso
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.AsEgreso)*@
                Egreso
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.AsPresent)*@
                Presente
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Es)*@
                Espacio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AsIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AsEgreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AsPresent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Es.EsDescripcion)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.AsiId">Editar</a> |
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.AsiId">Detalles</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.AsiId">Eliminar</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    a {
        text-decoration: none;
        color: black;
    }

    h3 {
        display: flex;
        font-size: 22px;
        text-align: start;
        align-content: center;
        align-items: center;
    }

    .col {
        display: flex;
        margin-bottom: 20px;
        justify-content: space-between;
    }
</style>
