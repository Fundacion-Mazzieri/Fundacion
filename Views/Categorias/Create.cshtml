@model Fundacion.Models.Categoria

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nueva Categoría</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CaDescripcion" class="control-label">Nombre</label>
                <input asp-for="CaDescripcion" class="form-control" />
                <span asp-validation-for="CaDescripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CaValorHora" class="control-label">Valor/Hora</label>
                <input asp-for="CaValorHora" class="form-control" />
                <span asp-validation-for="CaValorHora" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
