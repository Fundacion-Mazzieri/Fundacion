@model Fundacion.Models.Categoria

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle de la Categoría</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaDescripcion)
        </dd>
        <dt class = "col-sm-2">
            Valor/Hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaValorHora)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.CaId">Modificar</a>
    <a class="btn btn-primary" asp-action="Index">Volver</a>
</div>
