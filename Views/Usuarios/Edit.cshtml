@model Fundacion.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsId" />
            <div class="form-group">
                <label asp-for="UsDni" class="control-label">DNI</label>
                <input asp-for="UsDni" class="form-control" />
                <span asp-validation-for="UsDni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsContrasena" class="control-label">Contraseña</label>
                <input asp-for="UsContrasena" class="form-control" />
                <span asp-validation-for="UsContrasena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsApellido" class="control-label">Apellido</label>
                <input asp-for="UsApellido" class="form-control" />
                <span asp-validation-for="UsApellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsNombre" class="control-label">Nombre/s</label>
                <input asp-for="UsNombre" class="form-control" />
                <span asp-validation-for="UsNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsDireccion" class="control-label">Dirección</label>
                <input asp-for="UsDireccion" class="form-control" />
                <span asp-validation-for="UsDireccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsLocalidad" class="control-label">Localidad</label>
                <input asp-for="UsLocalidad" class="form-control" />
                <span asp-validation-for="UsLocalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsProvincia" class="control-label">Provincia</label>
                <input asp-for="UsProvincia" class="form-control" />
                <span asp-validation-for="UsProvincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsEmail" class="control-label">Email</label>
                <input asp-for="UsEmail" class="form-control" />
                <span asp-validation-for="UsEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsTelefono" class="control-label">Teléfono</label>
                <input asp-for="UsTelefono" class="form-control" />
                <span asp-validation-for="UsTelefono" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="RoId" class="control-label">Roles</label>
                <select asp-for="RoId" class="form-control" asp-items="ViewBag.RoId"></select>
                <span asp-validation-for="RoId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UsActivo" />Habilitado / Deshabilitado
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
