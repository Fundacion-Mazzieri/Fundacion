@model Fundacion.Models.Aula

@{
    ViewData["Title"] = "Editar";
}

<h1>Modificar</h1>

<h1>Aula</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuId" />
            <div class="form-group">
                <label asp-for="AuDescripcion" class="control-label"></label>
                <input asp-for="AuDescripcion" class="form-control" oninput="limitarDomicilio(this)" required />
                <span asp-validation-for="AuDescripcion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
