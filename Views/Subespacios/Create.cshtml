@model Fundacion.Models.Subespacio

@{
    ViewData["Title"] = "Cargar asignación de espacios";
}

<h1>Carga de asignación de espacios</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EsId" class="control-label"></label>
                <select asp-for="EsId" class ="form-control" asp-items="ViewBag.EsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AuId" class="control-label"></label>
                <select asp-for="AuId" class ="form-control" asp-items="ViewBag.AuId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SeDia" class="control-label"></label>
                <input asp-for="SeDia" class="form-control" />
                <span asp-validation-for="SeDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeHora" class="control-label"></label>
                <input asp-for="SeHora" class="form-control" />
                <span asp-validation-for="SeHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeCantHs" class="control-label"></label>
                <input asp-for="SeCantHs" class="form-control" />
                <span asp-validation-for="SeCantHs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cargar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger" style="margin-top:20px">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
